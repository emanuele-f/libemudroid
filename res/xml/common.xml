<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="Common settings" >
        <CheckBoxPreference
            android:defaultValue="@bool/def_fullScreen"
            android:key="fullScreen"
            android:title="Fullscreen" />
        <CheckBoxPreference
            android:defaultValue="@bool/def_hideNav"
            android:dependency="fullScreen"
            android:enabled="@bool/can_hideNav"
            android:key="hideNav"
            android:selectable="@bool/can_hideNav"
            android:summary="@string/summary_hideNav"
            android:title="Hide navigation" />
    </PreferenceCategory>
    
    <PreferenceCategory android:title="Misc settings" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="autoResume"
            android:title="Resume game, on focus gain"
            android:summary="Some Android versions are rumored to behave badly with this on"/>
    </PreferenceCategory>

</PreferenceScreen>